<Window x:Class="TetrisWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TetrisWPF"
        mc:Ignorable="d"
        Title="Tetris" Height="414" Width="736"
        MinWidth="736" MinHeight="414"
        Foreground="Pink"
        FontFamily="Segoe UI Light" FontSize="28"
        KeyDown="Window_KeyDown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.Background>
            <ImageBrush ImageSource="AssetsRes/35.jpeg"/>
        </Grid.Background>

        <Viewbox Grid.Row="1"
                 Grid.Column="1"
                 Margin="0,0,0,20">
            <Canvas x:Name ="GameCanvas"
                Grid.Row="1"
                Grid.Column="1"
                Background="#FFB6A1" 
                Width="250"
                Height="510"
                ClipToBounds="True"
                Loaded="GameCanvas_Loaded"/>
        </Viewbox>

        <TextBlock x:Name="ScoreText"
                   Grid.Row="0"
                   Grid.Column="1"
                   Text="Score: "
                   Margin="0, 10"
                   TextAlignment="Left"
                   Foreground="#000000"/>
        <TextBlock x:Name="LevelText"
                       Text="Level: "
                       TextAlignment="Left"
                       Foreground="#000000" Margin="160,10,0,0"/>

        <StackPanel Grid.Row="1"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right">
            <TextBlock Text="Hold"
                       TextAlignment="Center"
                       Foreground="#000000"/>
            <Image x:Name="HoldImage"
                   Margin="20"
                   Width="125"/>
        </StackPanel>

        <StackPanel Grid.Row="1"
                    Grid.Column="2"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left">
            <TextBlock Text="Next"
                       TextAlignment="Center"
                       Foreground="#000000"/>
            <Image x:Name="NextImage"
                   Margin="20"
                   Width="125"/>
        </StackPanel>

        <Grid x:Name="GameModeMenu"
              Background="#CC000000"
              Grid.RowSpan="2"
              Grid.ColumnSpan="3"
              Visibility="Visible">
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center">

                <TextBlock Text="Choose game mode"
                           FontSize="42"
                           TextAlignment="Center"
                           Foreground="White"
                           Height="74"/>

                <Button x:Name="MixedModeButton"
                        Content="Mixed"
                        Background="LightBlue"
                        Foreground="Black"
                        FontSize="24"
                        Margin="0,10,0,10"
                        Padding="20,10"
                        MinWidth="250"
                        Click="MixedMode_Click"
                        Width="225"/>

                <Button x:Name="TetrominoModeButton"
                        Content="Tetramino"
                        Background="LightGreen"
                        Foreground="Black"
                        FontSize="24"
                        Margin="0,10,0,10"
                        Padding="20,10"
                        MinWidth="250"
                        Click="TetrominoMode_Click"
                        Width="250"/>

                <Button x:Name="PentominoModeButton"
                        Content="Pentamino"
                        Background="LightCoral"
                        Foreground="Black"
                        FontSize="24"
                        Margin="0,10,0,10"
                        Padding="20,10"
                        MinWidth="250"
                        Click="PentominoMode_Click"
                        Width="245"/>
                <TextBlock x:Name="CurrentModeText"
                           Text="Current mode: Not selected"
                           FontSize="18"
                           TextAlignment="Center"
                           Foreground="LightGray"
                           Height="42"/>
            </StackPanel>
        </Grid>

        <Grid x:Name="GameOverMenu"
              Background="#CC000000"
              Grid.RowSpan="2"
              Grid.ColumnSpan="3"
              Visibility="Hidden">
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <TextBlock Text="Game Over"
                           FontSize="48"
                           TextAlignment="Center"/>
                <TextBlock x:Name="FinalScoreText"
                           Text="Score: "
                           FontSize="36"
                           TextAlignment="Center"/>
                <Button Content="Play Again"
                        Background="LightBlue"
                        Margin="0,20,0,0"
                        Padding="5"
                        Click="PlayAgain_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
